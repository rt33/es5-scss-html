{
  "name": "rugby",
  "description": "rugby",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:css": "node-sass --include-path scss ./src/scss/ -o ./build/css/",
    "build:html": "cpx \"./src/html/**/{*.html,*.svg}\" ./build",
    "build:js": "cpx './src/**/*.js' ./build/",
    "clean": "rimraf build/*",
    "eslint": "eslint src/**/*.js",
    "eslint:fix": "eslint src/**/*.js --fix",
    "dist": "run-s clean build:* imagemin",
    "fixpack": "fixpack",
    "fmt": "run-s eslint:fix stylefmt --print-label",
    "htmlhint": "htmlhint ./src/html/",
    "lint": "run-s eslint stylelint --print-label htmlhint",
    "lint-staged": "lint-staged",
    "precommit": "run-s lint-staged --print-label",
    "start": "mkdirp build/ && run-s watch",
    "stylefmt": "stylefmt -r 'src/scss/*.scss' -c .stylelintrc",
    "stylelint": "stylelint 'src/scss/*.scss'",
    "imagemin": "imagemin src/img/* --out-dir=build/img",
    "watch": "run-p watch:html watch:css watch:js watch:server imagemin",
    "watch:css": "watch \"npm run build:css\" ./src/**/",
    "watch:html": "watch \"npm run build:html\" ./src/html/",
    "watch:js": "cpx './src/**/*.js' ./build/ -w",
    "watch:server": "browser-sync start --server ./build --files ./build"
  },
  "devDependencies": {
    "browser-sync": "^2.18.12",
    "cpx": "^1.5.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-dependencies": "^2.3.0",
    "eslint-plugin-import": "^2.3.0",
    "fixpack": "^2.3.1",
    "htmlhint": "^0.9.13",
    "husky": "^0.13.4",
    "imagemin": "^5.3.1",
    "imagemin-cli": "^3.0.0",
    "lint-staged": "^3.6.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.11.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.5.0",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">= 7"
  },
  "license": "WTFPL",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylefmt",
      "stylelint",
      "git add"
    ],
    "src/**/*.html": [
      "htmlhint"
    ]
  }
}
